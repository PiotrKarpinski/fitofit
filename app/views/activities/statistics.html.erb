<p id="notice"><%= notice %></p>

<h1>Statistics</h1>
<h3>Activities added this week</h3>

<table class="styled-table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Distance</th>
    </tr>
  </thead>

  <tbody>
  <%if @activities.empty? %>
    <tr>
      <td>-</td>
      <td>-</td>
    </tr>
  <% end %>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= format_date(activity[:created_at]) %></td>
        <td><%= format_distance(activity[:distance]) %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_activity_path %>
<%= link_to 'Show all Activities', activities_path %>

